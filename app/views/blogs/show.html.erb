<p style="color: green"><%= notice %></p>

<%= render @blog %>

<%= Like.where(blog_id: @blog[:id]).count %>
<div>
  <%= link_to(Like.find_by(user_id: current_user[:id], blog_id: @blog[:id]) ? "Dislike" : "Like", "/blogs/#{@blog[:id]}/like_a_blog", :class => "waves-effect waves-light btn", :remote => true)%>
  <% if @blog.id == current_user[:id] %>
    <%= link_to "Edit this blog", edit_blog_path(@blog) %> 
    <%= button_to "Destroy this blog", @blog, method: :delete, :class => "waves-effect waves-light btn" %>
  <% end %>

  <%= link_to "Back to blogs", blogs_path %>
</div>
